
int iValue = 0;

void setup() {
  // put your setup code here, to run once:
Serial.begin(9600);

//pinMode (D1, INPUT);
pinMode(D2, OUTPUT);

}

void loop() {
  // put your main code here, to run repeatedly:

iValue = digitalRead(D1);


if (iValue)
{
  digitalWrite(D2, HIGH);
}
else
{
  digitalWrite(D2, LOW);
}

  
Serial.println(iValue);



delay(200);
}


